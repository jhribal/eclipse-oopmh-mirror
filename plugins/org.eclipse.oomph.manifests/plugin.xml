<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Oomph"
            id="org.eclipse.oomph">
      </category>
      <command
            name="%command.openManifest.name"
            categoryId="org.eclipse.oomph"
            id="org.eclipse.oomph.OpenManifest">
      </command>
      <command
            name="%command.openProperties.name"
            categoryId="org.eclipse.oomph"
            id="org.eclipse.oomph.OpenProperties">
      </command>
      <command
            categoryId="org.eclipse.ui.category.project"
            description="%buildClean.command.description"
            id="org.eclipse.oomph.buildClean"
            name="%buildClean.command.name">
      </command>
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.oomph.OpenManifest"
            class="org.eclipse.oomph.manifests.OpenManifestHandler">
      </handler>
      <handler
            class="org.eclipse.oomph.manifests.handlers.CleanBuildHandler"
            commandId="org.eclipse.oomph.buildClean">
      </handler>
      <handler
            class="org.eclipse.oomph.manifests.OpenPropertiesHandler"
            commandId="org.eclipse.oomph.OpenProperties">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.oomph.OpenManifest"
            contextId="org.eclipse.ui.contexts.window"
            sequence="F9"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenManifest"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenManifest"
            contextId="org.eclipse.jdt.ui.javaEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenManifest"
            contextId="org.eclipse.jdt.ui.breadcrumbEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenManifest"
            contextId="org.eclipse.ant.ui.AntEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenManifest"
            contextId="org.eclipse.jdt.ui.propertiesEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F9">
      </key>

      <key
            commandId="org.eclipse.oomph.OpenProperties"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M2+F9"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenProperties"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenProperties"
            contextId="org.eclipse.jdt.ui.javaEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenProperties"
            contextId="org.eclipse.jdt.ui.breadcrumbEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenProperties"
            contextId="org.eclipse.ant.ui.AntEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+F9">
      </key>
      <key
            commandId="org.eclipse.oomph.OpenProperties"
            contextId="org.eclipse.jdt.ui.propertiesEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M2+F9">
      </key>
      <key
            commandId="org.eclipse.oomph.buildClean"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+F5">
      </key>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.eclipse.oomph.buildClean"
               icon="icons/build.gif"
               label="%buildClean.menu.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
			            <iterate
			                  ifEmpty="false"
			                  operator="or">
			               <or>
			                  <adapt
			                        type="org.eclipse.core.resources.IResource">
			                  </adapt>
			                  <adapt
			                        type="org.eclipse.core.resources.IMarker">
			                  </adapt>
			               </or>
			            </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
